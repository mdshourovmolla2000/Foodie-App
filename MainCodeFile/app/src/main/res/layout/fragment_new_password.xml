<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.authPage.forgotPasswordPage.NewPasswordFragment"
    android:orientation="vertical"
    android:padding="@dimen/_12sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/backButton"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        app:cardBackgroundColor="@color/whiteColor"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_3sdp"
        android:layout_margin="@dimen/_5sdp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/back_icon"
            android:adjustViewBounds="true"
            android:layout_margin="@dimen/_10sdp"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/forgot_password_new_password"
        android:adjustViewBounds="true"
        android:layout_margin="@dimen/_30sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:textColor="@color/themeColor"
        android:textSize="@dimen/_20sdp"
        android:fontFamily="@font/nort"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_8sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a new password"
        android:textColor="@color/grayColor"
        android:textSize="@dimen/_16sdp"
        android:fontFamily="@font/nort"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_8sdp"/>

    <EditText
        android:id="@+id/passwordEdittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg"
        android:layout_marginTop="@dimen/_30sdp"
        android:hint="Password"
        android:textColorHint="@color/edittextHintColor"
        android:padding="@dimen/_15sdp"
        android:textColor="@color/blackColor"
        android:textSize="@dimen/_16sdp"
        android:fontFamily="@font/nort"
        android:inputType="textPassword"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/confirmPasswordEdittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg"
        android:layout_marginTop="@dimen/_12sdp"
        android:hint="Confirm Password"
        android:textColorHint="@color/edittextHintColor"
        android:padding="@dimen/_15sdp"
        android:textColor="@color/blackColor"
        android:textSize="@dimen/_16sdp"
        android:fontFamily="@font/nort"
        android:inputType="textPassword"
        android:maxLines="1"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/nextButton"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        app:cardBackgroundColor="@color/themeColor"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_3sdp"
        android:layout_margin="@dimen/_30sdp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/next_icon"
            android:adjustViewBounds="true"
            android:layout_margin="@dimen/_10sdp"
            android:layout_gravity="center"
            app:tint="@color/whiteColor" />

    </androidx.cardview.widget.CardView>

</LinearLayout>